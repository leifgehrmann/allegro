{
  "name": "allegro",
  "version": "0.0.1",
  "description": "Submit worklogs to Tempo.io in batches",
  "main": "app/background.js",
  "build": {
    "appId": "com.leifgehrmann.allegro",
    "productName": "Allegro",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "echo work in progress",
    "e2e": "echo work in progress",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "release": "npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leifgehrmann/allegro.git"
  },
  "keywords": [
    "tempo",
    "electron-app"
  ],
  "author": "Leif Gehrmann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leifgehrmann/allegro/issues"
  },
  "homepage": "https://github.com/leifgehrmann/allegro#readme",
  "dependencies": {
    "electron-store": "^5.2.0",
    "fs-jetpack": "^2.4.0",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.6.0",
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0",
    "file-loader": "^6.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "vue-loader": "^15.9.3",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  }
}
